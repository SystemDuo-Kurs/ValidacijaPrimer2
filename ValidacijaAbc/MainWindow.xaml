<Window x:Class="ValidacijaAbc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValidacijaAbc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
	<UniformGrid Columns="2">
		<Label>Ime:</Label>
		<TextBox Text="{Binding Ime, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource TxtBoxStil}"/>
		<Label>Prezime:</Label>
		<TextBox Text="{Binding Prezime, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource TxtBoxStil}"/>
		<Label>Mejl:</Label>
		<TextBox Text="{Binding Email, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource TxtBoxStil}"/>
		<Label>Godiste:</Label>
		<TextBox Text="{Binding Godiste, ValidatesOnDataErrors=True, UpdateSourceTrigger=Explicit}" Style="{StaticResource TxtBoxStil}"/>
		<Label/>
		<Button Click="Unos">Unos</Button>
	</UniformGrid>
</Window>
